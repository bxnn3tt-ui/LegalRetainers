modules = ["nodejs-20"]
[nix]
channel = "stable-25_05"
packages = ["unzip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev server"

[[workflows.workflow]]
name = "dev server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd checkforclaims-v3-main && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd LegalRetainers-main && PORT=5000 tsx server/index.ts & npx serve dist -s -l 3000 & wait"]
build = ["bash", "-c", "cd LegalRetainers-main && npm install && npm run build"]
